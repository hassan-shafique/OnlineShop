
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@model OnlineShop.Models.Products

<h2 class="text-info">Edit Product</h2>
<br />
<br />
<form asp-action="Edit" asp-controller="Product" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="row">

            <div class="col-md-8">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" class="form-control" />
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="productColor"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="productColor" class="form-control" />
                    </div>
                    <span asp-validation-for="productColor" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Image"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="Image" type="file" accept="image/png, image/gif, image/jpeg" />
                    </div>
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ProductTypesId"></label>
                    </div>
                    <div class="col-8">
                        <select class="form-control" asp-for="ProductTypesId"
                                asp-items="@ViewBag.ProductTypeID"></select>
                        @*<input asp-for="" class="form-control" />*@
                    </div>
                    <span asp-validation-for="ProductTypesId" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SpecialTagId"></label>
                    </div>
                    <div class="col-8">
                        <select class="form-control" asp-for="SpecialTagId"
                                asp-items="@ViewBag.SpecialTagsId"></select>
                        @*<input asp-for="" class="form-control" />*@
                    </div>
                    <span asp-validation-for="SpecialTagId" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="isAvailable"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="isAvailable" />
                    </div>
                    <span asp-validation-for="isAvailable" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-success"><i class="fas fa-arrow-left"></i> Back To List</a>
                </div>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-3">
                <h1> Image name: @Model.Image</h1>
                <img src="@Model.Image" alt="Preview Image" width="100" />
            </div>
        </div>

    </div>
</form>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}