
@{
    ViewData["Title"] = "Delete";
}

@model OnlineShop.Models.SpecialTags

<h2 class="text-info">Delete Special Tags</h2>
<br />
<br />
<form asp-action="Delete" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="specialtagname"></label>
            </div>
            <div class="col-5">
                <input asp-for="specialtagname" class="form-control" readonly="readonly" />
            </div>
            <span asp-validation-for="specialtagname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-success"><i class="fas fa-arrow-left"></i> Back To List</a>
        </div>
    </div>
</form>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}