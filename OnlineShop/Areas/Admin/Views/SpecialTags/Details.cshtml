
@{
    ViewData["Title"] = "Details";
}

@model OnlineShop.Models.SpecialTags

<h2 class="text-info">Details Special Tags</h2>
<br />
<br />
<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="specialtagname"></label>
            </div>
            <div class="col-5">
                <input asp-for="specialtagname" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="specialtagname" class="text-danger"></span>
        </div>
        <div class="form-group">

            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="far fa-edit"></i>Edit</a>
            @*<input type="submit" value="Back to List" class="btn btn-success" />*@
            <a asp-action="Index" asp-controller="SpecialTags" class="btn btn-success"> <i class="far fa-arrow-left"></i> Back to List</a>
        </div>
    </div>
</form>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}